{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": false,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        // Ensure that Babel can safely transpile files in the TypeScript project
        "isolatedModules": true
    },
    "include": ["./src/**/*.ts"]
}
